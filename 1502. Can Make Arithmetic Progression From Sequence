class Solution {
    public boolean canMakeArithmeticProgression(int[] arr) {
        if(arr.length==2)return true;
        Arrays.sort(arr);
        int x=1;
        int diff=arr[1]-arr[0];
        for(int i=0;i<arr.length-1;i++){
            if(arr[i+1]-arr[i]!=diff)return false;
        }
        return true;
    }
}

